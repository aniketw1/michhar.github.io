#!/usr/bin/env sh

# Run this script to deploy the app to Github Pages.

# Exit if any subcommand fails.
set -e

echo "Started deploying"

git checkout theme-mkdocs

# Build source site.
cd mkdocs_proj
mkdocs build
cd ..

# Push to gh-pages.
git add -fA
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
git push -f -q origin theme-mkdocs

# Checkout master branch, delete and then recreate branch
if [ `git branch | grep master` ]
then
  git branch -D master
fi
git checkout -b master

# Delete and move files.
# find . -maxdepth 1 ! -name 'site' ! -name '.git' ! -name '.gitignore' -exec rm -rf {} \;
mv mkdocs_proj/site/* .
rm -rf mkdocs_proj

# # Push to master.
# git add -fA
# git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
# git push -f -q origin master

# Move back to previous branch.
git checkout -

echo "Deployed Successfully!"

exit 0
